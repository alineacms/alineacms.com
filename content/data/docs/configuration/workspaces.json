  "blocks": [
    {
      "id": "259FDszdsLTaK8UKjB6dWr0kKL3",
      "index": "a0",
      "type": "TextBlock",
      "text": [
        {
          "type": "heading",
          "level": 1,
          "content": [
            {
              "type": "text",
              "text": "Workspaces"
            }
          ]
        },
        {
          "type": "paragraph",
          "content": [
            {
              "type": "text",
              "text": "Workspaces allow you to separate content. A workspace can have its own schema, media files and other configuration. It can be useful when the content has (mostly) no relation to the content in other workspaces. Editors can switch workspaces in the dashboard."
            }
          ]
        },
        {
          "id": "267Q4Kyg9hOUVaJWolmaa1wOndr",
          "type": "CodeBlock",
          "code": "workspace('My workspace', {\n  source, schema, color, roots\n})"
        },
        {
          "type": "heading",
          "level": 2,
          "content": [
            {
              "type": "text",
              "text": "Configuration"
            }
          ]
        },
        {
          "type": "heading",
          "level": 3,
          "content": [
            {
              "type": "text",
              "text": "Source"
            }
          ]
        },
        {
          "type": "paragraph",
          "content": [
            {
              "type": "text",
              "text": "A string pointing to a directory in which published content is stored."
            }
          ]
        },
        {
          "id": "28hgVxGUBKpMWwiKvfkoBZmYX15",
          "type": "CodeBlock",
          "code": "// content is stored in the `content` directory\nsource: './content'"
        },
        {
          "type": "heading",
          "level": 3,
          "content": [
            {
              "type": "text",
              "text": "Media directory"
            }
          ]
        },
        {
          "type": "paragraph",
          "content": [
            {
              "type": "text",
              "text": "A string pointing to a directory in which uploaded files are placed. In case your using alinea to manage web content this will often point to a directory that is made publicly available so an url can be created to download or display the file. "
            }
          ]
        },
        {
          "id": "28hgYn07WY7s77bPgYhtBluKjAT",
          "type": "CodeBlock",
          "code": "// uploaded files are placed in the `public` folder\nmediaDir: './public'"
        },
        {
          "type": "heading",
          "level": 3,
          "content": [
            {
              "type": "text",
              "text": "Schema"
            }
          ]
        },
        {
          "type": "paragraph",
          "content": [
            {
              "type": "text",
              "text": "The `Schema` describing the content structure. Use the `schema` method to create one."
            }
          ]
        },
        {
          "type": "heading",
          "level": 3,
          "content": [
            {
              "type": "text",
              "text": "Roots"
            }
          ]
        },
        {
          "type": "paragraph",
          "content": [
            {
              "type": "text",
              "text": "An object containing `Root` configurations and their keys."
            }
          ]
        },
        {
          "type": "heading",
          "level": 2,
          "content": [
            {
              "type": "text",
              "text": "Example workspace"
            }
          ]
        },
        {
          "type": "paragraph",
          "content": [
            {
              "type": "text",
              "text": "The example workspace that is created with `alinea init` has the following settings:"
            }
          ]
        },
        {
          "type": "paragraph"
        },
        {
          "type": "bulletList",
          "content": [
            {
              "type": "listItem",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "text",
                      "text": "`source`: content is stored in json files and can be found in the `content` directory"
                    }
                  ]
                }
              ]
            },
            {
              "type": "listItem",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "text",
                      "text": "`mediaDir`: uploaded files are placed in the `public` folder"
                    }
                  ]
                }
              ]
            },
            {
              "type": "listItem",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "text",
                      "text": "`schema`: the schema includes the default `MediaSchema`, necessary for file uploads, and a generic `Page` type"
                    }
                  ]
                }
              ]
            },
            {
              "type": "listItem",
              "content": [
                {
                  "type": "paragraph",
                  "content": [
                    {
                      "type": "text",
                      "text": "`roots`: defines two separate web roots, one for data (our welcome page in this case), and one for media (file uploads)"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "id": "286fXgUPgalGCxwGoPGuJxFISCi",
          "type": "CodeBlock",
          "code": "workspace('Example', {\n  source: './content',\n  mediaDir: './public',\n  schema: schema({\n    ...MediaSchema,\n    Page: type('Page',\n      {\n        title: text('Title'),\n        path: path('Path')\n      },\n      <Welcome />\n    ).configure({isContainer: true})\n  }),\n  roots: {\n    data: root('Example project', {\n      icon: IcRoundInsertDriveFile,\n      contains: ['Page']\n    }),\n    media: root('Media', {\n      icon: IcRoundPermMedia,\n      contains: ['MediaLibrary']\n    })\n  }\n})"
        }
      ]
    },
    {
      "id": "286C2IKcWw9PYcWgPIvXz1fP7Jz",
      "index": "a1",
      "type": "TypesBlock",
      "types": "WorkspaceOptions"
    }
  ]
}