  "title": "Workspaces",
  "blocks": [
    {
      "id": "259FDszdsLTaK8UKjB6dWr0kKL3",
      "index": "a0",
      "type": "TextBlock",
      "text": [
        {
          "type": "heading",
          "level": 1,
          "textAlign": "left",
          "content": [
            {
              "type": "text",
              "text": "Workspaces"
            }
          ]
        },
        {
          "type": "paragraph",
          "textAlign": "left",
          "content": [
            {
              "type": "text",
              "text": "Workspaces allow you to separate content. A workspace can have its own schema, media files and other configuration. Editors can easily switch workspaces in the dashboard."
            }
          ]
        },
        {
          "id": "267Q4Kyg9hOUVaJWolmaa1wOndr",
          "type": "CodeBlock",
          "code": "alinea.workspace('My workspace', {\n  source, schema, color, roots\n})"
        },
        {
          "type": "heading",
          "level": 2,
          "textAlign": "left",
          "content": [
            {
              "type": "text",
              "text": "Configuration"
            }
          ]
        },
        {
          "type": "heading",
          "level": 3,
          "textAlign": "left",
          "content": [
            {
              "type": "text",
              "text": "Source"
            }
          ]
        },
        {
          "type": "paragraph",
          "textAlign": "left",
          "content": [
            {
              "type": "text",
              "text": "A string pointing to a directory in which published content is stored."
            }
          ]
        },
        {
          "id": "28hgVxGUBKpMWwiKvfkoBZmYX15",
          "type": "CodeBlock",
          "code": "// content is stored in the `content` directory\nsource: './content'"
        },
        {
          "type": "heading",
          "level": 3,
          "textAlign": "left",
          "content": [
            {
              "type": "text",
              "text": "Media directory"
            }
          ]
        },
        {
          "type": "paragraph",
          "textAlign": "left",
          "content": [
            {
              "type": "text",
              "text": "A string pointing to a directory in which uploaded files are placed. In case your using alinea to manage web content this will often point to a directory that is made publicly available so an url can be created to download or display the file. "
            }
          ]
        },
        {
          "id": "28hgYn07WY7s77bPgYhtBluKjAT",
          "type": "CodeBlock",
          "code": "// uploaded files are placed in the `public` folder\nmediaDir: './public'"
        },
        {
          "type": "heading",
          "level": 3,
          "textAlign": "left",
          "content": [
            {
              "type": "text",
              "text": "Schema"
            }
          ]
        },
        {
          "type": "paragraph",
          "textAlign": "left",
          "content": [
            {
              "type": "text",
              "text": "The `Schema` describing the content structure. Use the `schema` method to create one."
            }
          ]
        },
        {
          "type": "heading",
          "level": 3,
          "textAlign": "left",
          "content": [
            {
              "type": "text",
              "text": "Roots"
            }
          ]
        },
        {
          "type": "paragraph",
          "textAlign": "left",
          "content": [
            {
              "type": "text",
              "text": "An object containing `Root` configurations and their keys."
            }
          ]
        },
        {
          "type": "heading",
          "textAlign": "left",
          "level": 3,
          "content": [
            {
              "type": "text",
              "text": "Types namespace `(optional)`"
            }
          ]
        },
        {
          "type": "paragraph",
          "textAlign": "left",
          "content": [
            {
              "type": "text",
              "text": "Generated types will be available from this namespace."
            }
          ]
        },
        {
          "id": "2AFmWaKSpFE6EzL3jLgdpPZDSsy",
          "type": "CodeBlock",
          "code": "// Configuration\nworkspace('My workspace', {typeNamespace: 'myWorkspaceTypes'})\n// Usage:\nimport {myWorkspaceTypes} from '@alinea/content/myworkspace'\nconsole.log(myWorkspaceTypes.MyType)"
        }
      ]
    },
    {
      "id": "286C2IKcWw9PYcWgPIvXz1fP7Jz",
      "index": "a1",
      "type": "TypesBlock",
      "types": "WorkspaceOptions"
    }
  ]
}